
DROP TABLE IF EXISTS SwordAffixes;
DROP TABLE IF EXISTS AbilityAffixes;

CREATE TABLE SwordAffixes (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    type TEXT NOT NULL,
    description TEXT NOT NULL
);

CREATE TABLE AbilityAffixes (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    ability_group TEXT NOT NULL,
    type TEXT NOT NULL,
    description TEXT NOT NULL
);





